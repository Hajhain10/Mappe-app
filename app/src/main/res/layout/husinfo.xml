<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    android:gravity="center"
    android:background="@drawable/blafarge">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="HUS INFO"
        android:textSize="30dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:gravity="center"
        ></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:weightSum="15"
        android:orientation="vertical"
        android:background="#fff">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="5"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Adresse:"
                android:id="@+id/husadressebes"
                android:textColor="@color/blaafarge"
                android:textStyle="bold"
                android:textSize="20dp"
                android:gravity="bottom"
                android:layout_weight="4"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:orientation="horizontal"
            android:weightSum="5"
            android:background="@drawable/graafarge"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="Hus adresse"
                android:id="@+id/husadresse"
                android:textSize="20dp"
                android:textColor="@color/sortish"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:layout_weight="4"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="5"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="Koordinater:"
                android:textColor="@color/blaafarge"
                android:textSize="20dp"
                android:gravity="bottom"
                android:textStyle="bold"
                android:id="@+id/koordianterbes"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:orientation="horizontal"
            android:weightSum="5"
            android:background="@drawable/graafarge"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:hint="koordinater"
                android:id="@+id/koordianter"
                android:textSize="20dp"
                android:textColor="@color/sortish"
                android:textStyle="bold"
                android:gravity="center_vertical"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="5"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="Antall Etasjer:"
                android:gravity="bottom"
                android:textSize="20dp"
                android:textColor="@color/blaafarge"
                android:textStyle="bold"
                android:id="@+id/etasjerbes"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:orientation="horizontal"
            android:weightSum="5"
            android:background="@drawable/graafarge"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:textSize="20dp"
                android:gravity="center_vertical"
                android:textColor="@color/sortish"
                android:textStyle="bold"
                android:id="@+id/etasjer"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="5"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="Beskrivelse:"
                android:textColor="@color/blaafarge"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="bottom"
                android:id="@+id/beskrivelsebes"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:weightSum="5"
            android:background="@drawable/graafarge"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:textColor="@color/sortish"
                android:textSize="20dp"
                android:textStyle="bold"
                android:id="@+id/beskrivelse"></TextView>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>
