<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="15">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:textSize="30dp"
        android:text="Reservasjoner"
        android:background="#fff"
        android:textColor="@color/blaafarge"
        android:gravity="center"></TextView>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/personer"
        android:layout_weight="12"
        android:listSelector="@color/blaafarge"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="leggInnNyttrom"
            android:text="Legg inn nytt rom"
            android:layout_weight="1"
            android:background="@drawable/blafarge"
            android:textColor="#fff"
            android:layout_margin="1dp">
        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="RomInfo"
            android:text="Rom info"
            android:background="@drawable/blafarge"
            android:textColor="#fff"
            android:layout_weight="1"
            android:layout_margin="1dp">
        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="LagReservsjon"
            android:text="Reserver rom"
            android:id="@+id/reserverRom"
            android:background="@drawable/blafarge"
            android:textColor="#fff"
            android:layout_weight="1"
            android:layout_margin="1dp">
        </Button>
    </LinearLayout>

</LinearLayout>
